<% @page_title = "UserAuth | Login" %>
<div class="row">
  <div class="col-md-4 col-md-offset-5">
    <h1>Login</h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.text_field :username, :placeholder => "username" %> <br>
      <%= f.password_field :password, :placeholder => "Password" %> <br>
      <%= f.submit "Log in", class: "btn-submit" %> <!--<%= link_to "back", '/', class: "btn btn-primary btn-xs" %>--><br>
    <% end %>
    <p class="lead">
      Don't have account yet? <br>
      Sign up <%= link_to "here", 'signup' %>
    </p>
  </div>
</div>
