	<body id="banner2">

    <section>
      <h2>We're as ready as you are.</h2>

      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.text_field :username, :placeholder => "username", :style => "text-align: center" %> <br />
        <%= f.password_field :password, :placeholder => "Password", :style => "text-align: center" %> <br />
        <%= f.submit "Log in", class: "btn-submit" %>
        <% end %>

        <p class="lead">
          Don't have account yet? <br>
          Sign up <%= link_to "here", 'signup' %> <br>
          <br>
          <%= link_to "Home", '/', class: "button special" %>
        </p>

    </section>
    <section id="banner3">
    </section>


  </body>
