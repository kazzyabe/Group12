<section id="banner2">
      <h2>We're as ready as you are.</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.text_field :username, :placeholder => 'username', :style => "text-align: center", autofocus: true %> <br />
        <%= f.password_field :password, :placeholder => 'password', :style => "text-align: center", autocomplete: "off" %> <br />

        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Remember Me", :class => "new_labels" %> <br />
        <% end -%>

        <%= f.submit "Log in", class: "btn-submit" %>
      <% end %>

      <hr />

      <p> Don't have an account? </p>
      <%= link_to "Sign up", new_user_registration_path, class: "button" %>


</section>
