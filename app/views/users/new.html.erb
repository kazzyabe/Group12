	<body id="banner2">

    <section>
      <h2>You've made the right choice.</h2>

      <%= form_for(@user) do |f| %>
        <%= f.text_field :username, :placeholder => "username", :style => "text-align: center" %> <br>
        <%= f.text_field :email, :placeholder => "email", :style => "text-align: center"%> <br>
        <%= f.password_field :password, :placeholder => "password", :style => "text-align: center" %> <br>
        <%= f.submit "Let's do this!", class: "btn-submit" %>
        <% end %>

        <p class="lead">
          Already have an account? <br>
          Log in <%= link_to "here", 'login' %> <br>
          <br>
          <%= link_to "Home", '/', class: "button special" %>
        </p>

    </section>
