<% @page_title = "UserAuth | Signup" %>
<div class="row">
  <div class="col-md-4 col-md-offset-5">
    <h1>Sign Up</h1>
    <%= form_for(@user) do |f| %>
      <%= f.text_field :username, :placeholder => "Username" %> <br>
      <%= f.text_field :email, :placeholder => "Email"%> <br>
      <%= f.password_field :password, :placeholder => "Password" %> <br>
      <%= f.submit "Create an account", class: "btn-submit" %> <!--<%= link_to "back", '/', class: "btn btn-primary btn-xs" %>--><br>
    <% end %>
    <p class="lead">
      Already have an account? <br>
      Log in <%= link_to "here", 'login' %>
    </p>
  </div>
</div>
