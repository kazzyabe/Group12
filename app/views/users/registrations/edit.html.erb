<section id="banner2">
  <!--<h2>Edit <%= resource_name.to_s.humanize %></h2>
  <hr />-->

<h2> Account Information </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :username, "Your Username", :class => "edit_labels"%>
      <%= f.text_field :username, :placeholder => 'Username', :style => "text-align: center", autofocus: true, :readonly => "true" %><br />
    </div>

    <div class="field">
      <%= f.label :email, "Your Email", :class => "edit_labels" %>
      <%= f.email_field :email, :placeholder => 'Email', autofocus: true, :style => "text-align: center", :readonly => "true" %><br />
    </div>

    <div class="field">
      <%= f.label :lastlocation, "Enter Your Currenty City", :class => "edit_labels" %>
      <%= f.text_field :lastlocation, :placeholder => 'Current City', :style => "text-align: center" %><br />
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, "New Password", :class => "edit_labels" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, :placeholder => 'New Password', autocomplete: "off", :style => "text-align: center" %><br />
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Enter Your New Password Again!", :class => "edit_labels" %>
      <%= f.password_field :password_confirmation, :placeholder => 'Confirm Your New Password', autocomplete: "off", :style => "text-align: center" %><br />
    </div>




    <div>
  &nbsp;
  </div>

  <hr />

  <h2 id="Pref"> Preferences </h2>

  <div class="field"> <!-- real name -->
    <%= f.label :realname, "What's your first name?", :class => "edit_labels" %>
    <%= f.text_field :realname, :placeholder => "First Name", :style => "text-align: center" %>
  </div>

  <br />

  <div class="field"> <!-- biography -->
    <%= f.label :biography, "Write something about yourself that will interest others!", :class => "edit_labels" %>
    <%= f.text_area :biography, :id => "biography" %>
  </div>

  <br />

  <div class="field gender"> <!-- user's gender -->
    <%= f.label :gender, "What's your gender", :class => "edit_labels" %>
    <%= f.radio_button :gender, "male" %>
    <%= f.label :gender, "Male", :value => "Male" %>
    <%= f.radio_button :gender, "female" %>
    <%= f.label :gender, "Female", :value => "Female" %>
  </div>

  <br />

  <div class="field interestedin"> <!-- gender the user is interested in -->
    <%= f.label :interestedin, "What gender are you attracted to?", :class => "edit_labels" %>
    <%= f.radio_button :interestedin, "male" %>
    <%= f.label :interestedin, "Male", :value => "Male" %>
    <%= f.radio_button :interestedin, "female" %>
    <%= f.label :interestedin, "Female", :value => "Female" %>
  </div>

  <br />

  <div class="field"> <!-- age -->
    <%= f.label :age, "What's your age?", :class => "edit_labels" %>
    <%= f.select :age, (18..72), :class => "age_drop_down" %>
  </div>



  <hr />

  <div class="field">
    <%= f.label :current_password, "Your Current Password", :class => "edit_labels" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, :placeholder => 'Current Password', autocomplete: "off", :style => "text-align: center" %> <br />
  </div>

    <div class="actions">
      <%= f.submit "Update", class: "btn-submit" %>
    </div>
  <% end %>

<hr />

  <p>
    <font size="12">Unhappy?</font> <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn-submit" %>
    <%= link_to "Back", '/', class: "button special" %>
  </p>

</section>
