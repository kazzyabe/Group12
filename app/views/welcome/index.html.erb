<% @page_title = "Welcome" %> <!-- kazuki's code -->
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <% if current_user %>
      <h2>Welcome <%= current_user.username %></h2>
      <%= current_user.email %> <br>
      <%= link_to "Logout", 'logout', class: "btn btn-primary" %>
      <% if current_user.admin? %>
        <%= link_to "Users List", 'users', class: "btn btn-primary" %>
      <% else %>
        <%= link_to 'Destroy', user_path(current_user.id),
                    method: :delete,
                    data: { confirm: 'Are you sure?' },
                    class: "btn btn-primary" %>
      <% end %>
    <% else %>
      <h2>Welcome</h2>
      <%= link_to "Login", 'login', class: "btn btn-primary" %>
      <%= link_to "Signup", 'signup', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
